<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/list_button"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center"
        android:layout_marginHorizontal="28dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@color/white"
            android:paddingVertical="12dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/btn_get_5"
                android:text="Get 5 Result"
                android:textSize="28sp"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/btn_get_10"
                android:text="Get 11 Result"
                android:layout_marginTop="4dp"
                android:textSize="28sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/btn_get_15"
                android:text="Get 15 Result"
                android:layout_marginTop="4dp"
                android:textSize="28sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/btn_get_sub"
                android:text="Sub Long Time Use"
                android:layout_marginTop="4dp"
                android:textSize="28sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button_exit_app"
        android:text="Exit"
        android:textSize="14sp"
        android:layout_marginBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>